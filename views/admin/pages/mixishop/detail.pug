extends ../../layouts/default.pug 

block main 
    h1(class="mb-3") Chi tiết sản phẩm

    div(class="mb-3") Sản phẩm: <b>#{record.title}</b>
    div(class="mb-3") Giá: <b>#{record.price}</b>
    div(class="mb-3") 
        img(src=record.image, alt=record.title width="250px" height="auto")
    div(class="mb-3") Vị trí: <b>#{record.positon}</b>
    if(record.status == "active")
        button(class="btn btn-success btn-sm mb-3") Hoạt động
    else 
        button(class="btn btn-danger btn-sm mb-3") Dừng hoạt động
    if(record.createdAt) 
        div(class="mb-3") Sản phẩm được tạo vào lúc: <b> #{moment(record.createdAt).format('DD/MM/YYYY')} </b>
    if(record.updatedAt) 
        div(class="mb-3") Sản phẩm được cập nhật vào lúc: <b> #{moment(record.updatedAt).format('DD/MM/YYYY')} </b>
    if(record.deletedAt) 
        div(class="mb-3") Sản phẩm được xóa vào lúc: <b> #{moment(record.deletedAt).format('DD/MM/YYYY')} </b>