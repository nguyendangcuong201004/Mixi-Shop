mixin table(index, image, title, price, status, id, positon)
    tr
        td  
            input(type="checkbox" name="checkbox" data=id)
        td #{index + 1}
        td 
            img(src=image, alt="")
        td #{title}
        td #{price}
        td  
            input(name="position" value=positon style="width: 60px" type="number" min="1")
        td 
            if (status == "active")
               button(
                button-change-status
                class="badge badge-success"
                data-status="inactive"
                data-id=id
               ) Hoạt động
            else 
                button(
                button-change-status
                class="badge badge-danger"
                data-status="active" 
                data-id=id
               ) Dừng hoạt động 
        td  
            button(class="btn btn-warning btn-sm") Sửa
            button(
               button-delete 
               class="btn btn-danger btn-sm ml-1"
               data-id=id
            ) Xóa
            a(
                href=`${prefixAdmin}/products/detail/${id}`
                class="btn btn-info btn-sm ml-1"
            ) Chi tiết 