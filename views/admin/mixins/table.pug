mixin table(index, image, title, price, status, id)
    tr
        td  
            input(type="checkbox" name="checkbox" data=id)
        td #{index + 1}
        td 
            img(src=image, alt="")
        td #{title}
        td #{price}
        td 
            if (status == "active")
               button(
                button-change-status
                class="badge badge-success"
                data-status="inactive"
                data-id=id
               ) Hoạt động
            else 
                button(
                button-change-status
                class="badge badge-danger"
                data-status="active" 
                data-id=id
               ) Dừng hoạt động 
        td  
            button(class="btn btn-warning btn-sm") Sửa
            button(class="btn btn-danger btn-sm ml-1") Xóa